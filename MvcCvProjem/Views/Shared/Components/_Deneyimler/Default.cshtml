@using EntityLayer.Concrete
@model List<Deneyim>

  <section class="resume-section" id="experience">
                <div class="resume-section-content">
                    <h2 class="mb-5">Deneyimlerim</h2>
        @foreach (var item in Model)
        {
            
      
        <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="flex-grow-1">
                            <h3 class="mb-0">@item.SirketPozisyon</h3>
                            <div class="subheading mb-3">@item.SirketAdi</div>
                            <p>@item.Aciklama</p>
                        </div>
                        <div class="flex-shrink-0"><span class="text-primary">@item.CalismaSuresi - @item.SirketPozisyon</span></div>
                    </div>
                     }
                </div>
            </section>